DISCORD_TOKEN=your_discord_bot_token
AUTH_ISSUER=DiscordAuthenticator
# Optional: set guild ID to register slash commands instantly in one server.
GUILD_ID=

# Optional MongoDB (if empty, bot uses local JSON file at data/user-secrets.json)
MONGODB_URI=
MONGODB_DB=discord_auth_bot
MONGODB_COLLECTION=user_vaults

# Recommended security: 64-byte key in BASE64. Bot derives AES-256-GCM key from it.
# Example generate: openssl rand -base64 64
SECRET_ENCRYPTION_KEY_BASE64=
